# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/roomlife
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/roomlife?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-should-be-very-long-and-random
# Generate a strong JWT secret: openssl rand -base64 64

# Server Configuration  
PORT=3000

# Node Environment
NODE_ENV=development
# Options: development, production, test

# Database Connection Options (Optional)
# DB_HOST=localhost
# DB_PORT=27017
# DB_NAME=roomlife
# DB_USER=username
# DB_PASS=password

# Email Configuration (For future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# File Upload Configuration (For future features)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# Redis Configuration (For caching - future feature)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=